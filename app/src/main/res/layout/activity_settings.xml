<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="v.blade.ui.SettingsActivity">

    <include
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAlignment="center"
              android:textColor="#000000"
              android:textSize="22sp"
              android:textStyle="bold"
              android:text="@string/about"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAlignment="center"
              android:textSize="16sp"
              android:text="Blade est un lecteur de musique pour Android programmé par Valentin HAUDIQUET (@Valou3433). L'objectif du projet est de créer un lecteur permettant de lier la bibliothèque locale, Spotify, Deezer et SoundCloud."/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAlignment="center"
              android:textSize="15sp"
              android:text="License : GNU GPL v3"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAlignment="center"
              android:textSize="15sp"
              android:text="Sources disponibles sur GitHub (valou3433/blade-player)"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:textSize="16sp"
              android:text="Bibliothèques utilisées :"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="15sp"
              android:text="DragSortListView, license Apache v2.0, Copyright 2012 Carl Bauer, github.com/loeschg/drag-sort-listview"/>

</LinearLayout>
